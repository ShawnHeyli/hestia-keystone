datasource postgresql {
  url               = env("DATABASE_URL")
  shadowDatabaseUrl = env("SHADOW_DATABASE_URL")
  provider          = "postgresql"
}

generator client {
  provider = "prisma-client-js"
  output   = "node_modules/.prisma/client"
}

model User {
  id       String    @id @default(cuid())
  name     String    @default("")
  email    String    @unique @default("")
  password String
  projects Project[] @relation("Project_author")
  isAdmin  Boolean   @default(false)
}

model Project {
  id          String  @id @default(cuid())
  title       String  @unique @default("")
  demoLink    String  @default("")
  sourceLink  String  @default("")
  logo        Image?  @relation("Project_logo", fields: [logoId], references: [id])
  logoId      String? @map("logo")
  mainImage   Image?  @relation("Project_mainImage", fields: [mainImageId], references: [id])
  mainImageId String? @map("mainImage")
  article     Json    @default("[{\"type\":\"paragraph\",\"children\":[{\"text\":\"\"}]}]")
  author      User?   @relation("Project_author", fields: [authorId], references: [id])
  authorId    String? @map("author")

  @@index([logoId])
  @@index([mainImageId])
  @@index([authorId])
}

model Image {
  id                     String    @id @default(cuid())
  image_filesize         Int?
  image_extension        String?
  image_width            Int?
  image_height           Int?
  image_id               String?
  altText                String    @default("")
  from_Project_logo      Project[] @relation("Project_logo")
  from_Project_mainImage Project[] @relation("Project_mainImage")
}
